#define SAMPLE_RATE 75
#define BAUD_RATE 115200
// #define INPUT_PIN_HORIZONTAL A0
#define INPUT_PIN_VERTICAL A5

int count = 0;

void setup() {
	// Serial connection begin
	Serial.begin(BAUD_RATE);
}

void loop() {
	// Calculate elapsed time
	static unsigned long past = 0;
	unsigned long present = micros();
	unsigned long interval = present - past;
	past = present;

	// Run timer
	static long timer = 0;
	timer -= interval;

	// Sample
	if(timer < 0){
		timer += 1000000 / SAMPLE_RATE;
    // float sensor_value_horizontal = analogRead(INPUT_PIN_HORIZONTAL);
    float sensor_value_vertical = analogRead(INPUT_PIN_VERTICAL);
		// float signal_horizontal = EOGFilter(sensor_value_horizontal);
    float signal_vertical = EOGFilter2(sensor_value_vertical);
    Serial.print(-300);
    Serial.print(",");
    Serial.print("-200");
    Serial.print(",");
		// Serial.print(signal_horizontal);
    // Serial.print(",");
    Serial.print(signal_vertical);
    Serial.print(",");
    Serial.println(200);
    count++;
	}
}

